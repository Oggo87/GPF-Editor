<Window x:Class="GPF_Editor.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPF_Editor"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="About" Height="200" Width="350"
        Icon="GPFEditor.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="123*"/>
            <ColumnDefinition Width="215*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="OkButton" Content="Ok" Margin="151,130,21,0" Click="OkButton_Click" Height="20 " VerticalAlignment="Top" Grid.Column="1"/>
        <Label x:Name="AppNameLabel" Content="GPF Editor" Margin="10,13,10,0" VerticalAlignment="Top" Grid.Column="1" Height="26"/>
        <Label x:Name="VersionLabel" Content="Version" Margin="10,43,10,0" VerticalAlignment="Top" Grid.Column="1" Height="26"/>
        <Label x:Name="AuthorLabel" Content="Author" Margin="10,73,10,0" VerticalAlignment="Top" Grid.Column="1" Height="26"/>
        <Label x:Name="CopyrightLabel" Content="Copyright" Margin="10,103,10,0" VerticalAlignment="Top" Grid.Column="1" Height="26"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="10,23,0,0" VerticalAlignment="Top" Width="100" Source="GPFEditor.png"/>

    </Grid>
</Window>
