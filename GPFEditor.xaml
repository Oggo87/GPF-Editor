<Window x:Class="GPF_Editor.GPFEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPF_Editor"
        mc:Ignorable="d"
        Title="GPF Editor" Height="auto" Width="auto" MinHeight="420" MinWidth="670" SizeToContent="WidthAndHeight">
    <Grid Margin="0,0,0,0" MinHeight="420" MinWidth="670">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="420*" MinWidth="420"/>
            <ColumnDefinition Width="125*" MinWidth="125"/>
            <ColumnDefinition Width="125*" MinWidth="125"/>
        </Grid.ColumnDefinitions>

        <Image x:Name="GpfImage" Margin="10,10,10,10"/>

        <Button x:Name="BtnOpenGPF" Content="Open GPF" Width="110" Height="30" Margin="0,10,5,0" VerticalAlignment="Top" Click="BtnOpenGPF_Click" Grid.Column="1" HorizontalAlignment="Right"/>
        <Button x:Name="BtnSaveGPF" Content="Save GPF" Width="110" Height="30" Margin="5,10,0,0" VerticalAlignment="Top" Click="BtnSaveGPF_Click" IsEnabled="{Binding SaveEnabled}" Grid.Column="2" HorizontalAlignment="Left"/>
        <Button x:Name="BtnOpenTGA" Content="Open TGA" Width="110" Height="30" Margin="0,45,5,0" VerticalAlignment="Top" Click="BtnOpenTGA_Click" Grid.Column="1" HorizontalAlignment="Right"/>
        <Button x:Name="BtnSaveTGA" Content="Save TGA" Width="110" Height="30" Margin="5,45,0,0" VerticalAlignment="Top" Click="BtnSaveTGA_Click" IsEnabled="{Binding SaveEnabled}" Grid.Column="2" HorizontalAlignment="Left"/>

        <Button x:Name="BtnExportPatch" Content="Export Patch Files" HorizontalAlignment="Center" Height="30" Margin="0,80,0,0" VerticalAlignment="Top" Width="110" Click="BtnExportPatch_Click" IsEnabled="{Binding SaveEnabled}" Grid.Column="1" Grid.ColumnSpan="2"/>

        <GroupBox x:Name="GrpBoxCharGrid" Grid.Column="1" Grid.ColumnSpan="2" Header="Char Grid" Margin="10,115,10,10"/>

        <CheckBox x:Name="ChkBoxShowGrid" Content="Show Grid" HorizontalAlignment="Left" Margin="20,139,0,0" VerticalAlignment="Top" Grid.Column="1" Checked="ChkBoxShowGrid_Changed" Unchecked="ChkBoxShowGrid_Changed"/>
        
        <Label x:Name="LblRowHeight" Content="Row Height" HorizontalAlignment="Left" Margin="20,159,0,0" VerticalAlignment="Top" Width="84" Grid.Column="1" Height="26"/>

        <TextBox x:Name="TxtRowHeight" Margin="109,163,20,0" TextWrapping="Wrap" Text="{Binding CharGrid.RowHeight, Mode = TwoWay}" VerticalAlignment="Top" Grid.Column="1" Grid.ColumnSpan="2" Height="18"/>

        <DataGrid x:Name="CharTableDataGrid" Margin="20,190,20,20" ItemsSource="{Binding CharGrid.CharTable}" Grid.Column="1" Grid.ColumnSpan="2" RowHeaderWidth="20" SelectionMode="Single" CanUserSortColumns="False" SelectionChanged="CharTableDataGrid_SelectionChanged"/>


    </Grid>
</Window>
